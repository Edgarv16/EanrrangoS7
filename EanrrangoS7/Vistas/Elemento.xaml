<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EanrrangoS7.Vistas.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR - ELIMINAR" FontSize="18" HorizontalTextAlignment="Center" />

            <Entry x:Name="txtID"  Placeholder="ID" IsReadOnly="True"> </Entry>
            <Entry x:Name="txtNombre"  Placeholder="Nombre"></Entry>
            <Entry x:Name="txtUsuario"  Placeholder="usuario"></Entry>
            <Entry x:Name="txtContrasena"  Placeholder="Contrasena" ></Entry>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>

            <Button x:Name="btnActualizar" Text="ACTUALIZAR" Clicked="btnActualizar_Clicked" Grid.Row="0" Grid.Column="0"></Button>
            <Button x:Name="btnEliminar" Text="ELIMINAR" Clicked="btnEliminar_Clicked" Grid.Row="0" Grid.Column="1"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>